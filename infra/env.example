# ---- App
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# ---- Security
JWT_SECRET=change-me-super-secret-min-16-chars
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3000

# ---- Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=noto
DATABASE_URL=postgresql://postgres:postgres@db:5432/noto?schema=public

# ---- Uploads / Media
MAX_UPLOAD_MB=8

# Local dev (Docker): filesystem
MEDIA_DRIVER=fs
MEDIA_STORAGE_PATH=/data/media
MEDIA_PUBLIC_BASE_URL=http://localhost:8080

# Vercel (recommended): Vercel Blob
# MEDIA_DRIVER=blob
# BLOB_READ_WRITE_TOKEN=... (Vercel sets this automatically when you attach Blob)

# ---- Rate limit
RATE_LIMIT_MAX=300
RATE_LIMIT_TIME_WINDOW=1 minute
